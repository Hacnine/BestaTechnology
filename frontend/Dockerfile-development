# Frontend Dockerfile for Development
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Remove lockfiles to avoid conflicts
RUN rm -f package-lock.json bun.lockb

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 8081

# Start development server
CMD ["npm", "run", "dev"]